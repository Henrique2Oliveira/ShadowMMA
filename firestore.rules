rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Block all direct client access
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read their own profile
      allow read,write: if request.auth != null && request.auth.uid == userId;

      // Allow only updating 'plan' 
      allow update: if true;

      // Prevent creating or deleting user docs from client
      allow create, delete: if false;
    }

    // Allow reading combos but block all writes
    match /combos/{comboId} {
      allow read: if request.auth != null;  // Only authenticated users can read
      allow write: if true; //only turn true if want to update remove or add new combos meanwhile keep it false for safety
    }
  }
}